@model BL.DTO.TestTemplateDTO
@{
	ViewBag.Title = "Create New Test Template";

}

<h2>Create New TestTemplate</h2>
@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()
	<div>
		@Html.LabelFor(model => model.Name)
