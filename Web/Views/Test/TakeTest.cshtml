@model Web.Models.TestActiveModel



@if (User.IsInRole("admin"))
{
	<p>
		@*@Html.ActionLink("Create New", "Create")*@
	</p>
}
<table class="table table-hover table-striped">
	<tr>
		<th>
			@Html.DisplayNameFor(model => model.Test.Name) =
			@Html.ViewData.Model.Test.Name
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Test.Date) =
			@Html.ViewData.Model.Test.Date
		</th>

		<th>
			@Html.DisplayNameFor(model => model.Test.CompletionTime) =
			@Html.ViewData.Model.Test.CompletionTime
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Test.NumOfQuestions) =
			@Html.ViewData.Model.Test.NumOfQuestions
		</th>

	</tr>
	@{ var i = 0; }
	@foreach (var item in Model.Questions)
	{
		i++;
		var k = 0;
		
		
		<tr>

			<td>
				@i . 
				@Html.DisplayFor(modelItem => item.Text)

				<br/>
				<br/>
				@foreach (var ans in item.Answers)
				{
					@k
					<br/>
					<p>
						@ans.Text
					</p>
					<br/>
					<br/>
					
				}
			</td>
			

			<td>
				@*@if (User.IsInRole("admin"))
				{
					@Html.ActionLink("Edit", "Edit", new { id = item.Id })
					@Html.ActionLink("Delete", "Delete", new { id = item.Id })
				}
				@Html.ActionLink("TakeExam", "TakeTest", new { id = item.Id })*@
			</td>
		</tr>
	}

</table>